{
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "api/*.py",
            "use": "@vercel/python"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/admin",
            "destination": "/admin.html"
        },
        {
            "source": "/admin/(.*)",
            "destination": "/admin.html"
        },
        {
            "source": "/((?!api/|api$|admin/|admin$).*)",
            "destination": "/index.html"
        }
    ]
}