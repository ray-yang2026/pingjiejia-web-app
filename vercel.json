{
    "functions": {
        "api/*.py": {
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/admin",
            "destination": "/admin.html"
        },
        {
            "source": "/admin/(.*)",
            "destination": "/admin.html"
        },
        {
            "source": "/((?!api/|api$|admin/|admin$).*)",
            "destination": "/index.html"
        }
    ]
}